<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="#3F51B5"
        android:gravity="left"
        android:padding="8dp"
        android:text="SampleCaculator"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/et_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:background="@drawable/edit_text_border_blue"
        />


    <LinearLayout
        android:id="@+id/buttonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="180dp"
        android:background="@color/buttons_background">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buttonAllClear"
                style="@style/AllClearButton"
                android:layout_height="75dp"
                android:text="@string/all_clear"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buttonSeven"
                style="@style/CalculatorButton"
                android:layout_height="75dp"
                android:text="@string/seven" />

            <Button
                android:id="@+id/buttonEight"
                style="@style/CalculatorButton"
                android:text="@string/eight"/>

            <Button
                android:id="@+id/buttonNine"
                style="@style/CalculatorButton"
                android:text="@string/nine"/>

            <Button
                android:id="@+id/buttonDivision"
                style="@style/ActionButton"
                android:text="/" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buttonFour"
                style="@style/CalculatorButton"
                android:layout_height="75dp"
                android:text="@string/four" />

            <Button
                android:id="@+id/buttonFive"
                style="@style/CalculatorButton"
                android:text="@string/five"/>

            <Button
                android:id="@+id/buttonSix"
                style="@style/CalculatorButton"
                android:text="@string/six"/>

            <Button
                android:id="@+id/buttonMultiplication"
                style="@style/CalculatorButton"
                android:text="*"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buttonOne"
                style="@style/CalculatorButton"
                android:layout_height="75dp"
                android:text="@string/one" />

            <Button
                android:id="@+id/buttonTwo"
                style="@style/CalculatorButton"
                android:text="@string/two"/>

            <Button
                android:id="@+id/buttonThree"
                style="@style/CalculatorButton"
                android:text="@string/three"/>

            <Button
                android:id="@+id/buttonSubtraction"
                style="@style/CalculatorButton"
                android:text="-"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <Button
                android:id="@+id/buttonDecimalPoint"
                style="@style/CalculatorButton"
                android:text="."/>

            <Button
                android:id="@+id/buttonZero"
                style="@style/CalculatorButton"
                android:layout_height="75dp"
                android:text="@string/zero" />

            <Button
                android:id="@+id/buttonEquals"
                style="@style/ActionButton"
                android:layout_height="75dp"
                android:text="="/>

            <Button
                android:id="@+id/buttonAddition"
                style="@style/CalculatorButton"
                android:text="+"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
